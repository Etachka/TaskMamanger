<Window x:Class="TaskMamanger.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskMamanger.Forms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10">
            <ItemsControl Name="icTodoList" ItemsSource="{Binding TaskColumns}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="16*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock Margin="5 0 0 0" Text="Bebebe &lt;"/>
                                <TextBlock x:Name="count" Text="{Binding ItemCount}" 
                                           Margin="1" Background="AliceBlue" Foreground="LightGray"/>
                            </Grid>
                            <ItemsControl Name="icсTodoList" ItemsSource="{Binding Tasks}" Grid.Row="1">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="3*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="_date" Grid.Row="0" Grid.Column="0"
                                                       Margin="5 0 0 0" Text="{Binding EndTime}"/>
                                            <TextBlock x:Name="_name" Grid.Row="1" Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Text="{Binding Name}"/>
                                            <TextBlock x:Name="_id" Grid.Row="2" Grid.Column="0"
                                                       HorizontalAlignment="Left"
                                                       Text="{Binding ID}"/>
                                            <Image x:Name="_pic" Grid.Row="2" Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   Grid.RowSpan="2" Source="{Binding Picture}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
